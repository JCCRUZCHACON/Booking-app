# 🌐 URL de la base de datos local del desarrollador
# Formato: postgres://usuario:contraseña@localhost:puerto/nombre_db
# Este valor será usado si NODE_ENV está en 'development'
DATABASE_URL_DEV=postgres://postgres:root@127.0.0.1:5432/ghoteles_dev

# 🔐 Secreto para firmar JWT
# Puedes generar uno con: require('crypto').randomBytes(64).toString('hex')
TOKEN_SECRET=

# ⏱️ Tiempo de expiración del token (ej: 1d, 12h, 30m)
TOKEN_EXPIRES_IN=1d

# 🚪 Puerto local donde correrá la app (por defecto 3000)
PORT=3000

# 🧪 Entorno actual (development o production)
NODE_ENV=development
